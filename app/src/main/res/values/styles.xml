<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darkGray</item>
        <item name="colorPrimaryDark">@color/semiDarkGray</item>
        <item name="colorAccent">@color/lightGray</item>
    </style>

    <style name="SearchEditText" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/darkGray</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="CustomCheckbox" parent="Theme.AppCompat">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="AddEditText" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/darkGray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="Slider" parent="Theme.AppCompat">
        <item name="android:seekBarStyle">@color/red</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

</resources>
